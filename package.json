{
  "name": "@nosana/solana-vue",
  "version": "0.0.0",
  "description": "Vue composables for Solana wallet-standard",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles/index.css",
    "./styles/wallet-button": "./dist/styles/wallet-button.css",
    "./styles/wallet-modal": "./dist/styles/wallet-modal.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && npm run copy:assets",
    "copy:assets": "npm run copy:css && npm run copy:vue",
    "copy:css": "mkdir -p dist/styles && cp node_modules/@nosana/wallet-standard-vue/dist/styles/*.css dist/styles/",
    "copy:vue": "mkdir -p dist/components && cp src/components/*.vue dist/components/",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.vue",
    "lint:fix": "eslint . --ext .ts,.vue --fix",
    "format": "prettier --check \"**/*.{ts,vue,json,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,vue,json,md}\"",
    "publish:public": "npm publish --access public"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "dependencies": {
    "@nosana/wallet-standard-vue": "^1.0.0",
    "@solana/kit": "^5.0.0",
    "@solana/promises": "^5.0.0",
    "@solana/wallet-standard-chains": "^1.0.0",
    "@solana/wallet-standard-features": "^1.3.0",
    "@wallet-standard/errors": "^0.1.1",
    "@wallet-standard/ui-features": "^1.0.1",
    "@wallet-standard/ui-registry": "^1.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.5.1",
    "happy-dom": "^20.0.10",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.10",
    "vue": "^3.4.0",
    "vue-eslint-parser": "^10.2.0"
  }
}
